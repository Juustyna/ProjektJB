@model UserViewModel

@{
    ViewData["Title"] = "Dodaj pracownika";
}

<div class="container col-md-8 mt-5">
    <div class="card">
        <div class="card-header">
            <h4 class="text-center">@ViewData["Title"]</h4>
        </div>

        <form asp-action="Create" method="post" class="mt-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="FirstName" asp-for="FirstName"
                                placeholder="Imię" autofocus>
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="LastName" asp-for="LastName"
                                placeholder="Nazwisko">
                            <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="email" class="form-control" id="Email" asp-for="Email"
                                placeholder="twój@email.com">
                            <label asp-for="Email"></label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="tel" class="form-control" id="PhoneNumber" asp-for="PhoneNumber"
                                placeholder="">
                            <label asp-for="PhoneNumber"></label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <select class="form-control" id="UserRole" asp-for="UserRole" asp-items="ViewBag.UserRoles">
                        <option value="">...</option>
                    </select>
                    <label asp-for="UserRole"></label>
                    <span asp-validation-for="UserRole" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="Password" asp-for="Password"
                                placeholder="Hasło">
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword"
                                placeholder="Potwierdź hasło">
                            <label asp-for="ConfirmPassword"></label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-dark btn-lg w-100">Dodaj</button>
            </div>
        </form>
    </div>
</div>